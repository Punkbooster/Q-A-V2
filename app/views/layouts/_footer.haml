      %a.btn-floating.btn-tw.mx-1
        %i.fa.fa-twitter
    %li.list-inline-item
      %a.btn-floating.btn-gplus.mx-1
        %i.fa.fa-google-plus
    %li.list-inline-item
      %a.btn-floating.btn-li.mx-1
        %i.fa.fa-linkedin
